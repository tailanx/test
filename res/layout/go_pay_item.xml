<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/go_pay_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/product_image_bg"
        android:padding="10dp" />

    <TextView
        android:id="@+id/go_pay_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/go_pay_item_image"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="15sp" />
    <!--
              <TextView 
                      android:layout_marginLeft="8dp"
                      android:id="@+id/go_pay_item_sum"
                	  android:layout_width="wrap_content"
                	  android:layout_height="wrap_content"
                	  android:layout_toRightOf="@id/go_pay_item_image"
  					  android:layout_below="@id/go_pay_item_text"
                  	  android:text="￥"
                	  android:textSize="15sp"
                	  android:layout_marginTop="10dp"
                	  android:textColor="#ed217c"
                	  />
    -->

    <TextView
        android:id="@+id/go_pay_item_sum_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_pay_item_text"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/go_pay_item_image"
        android:textColor="#ed217c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/go_pay_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_pay_item_sum_detail"
        android:layout_marginBottom="@dimen/margin_left_add"
        android:layout_marginTop="@dimen/actiobar_margin_top"
        android:layout_toRightOf="@id/go_pay_item_image"
        android:layout_alignLeft="@id/go_pay_item_text"
        android:text="数量："
        android:textSize="15sp" />

    <TextView
        android:id="@+id/go_pay_item_count_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/go_pay_item_sum_detail"
        android:layout_marginBottom="@dimen/margin_left_add"
        android:layout_marginTop="@dimen/actiobar_margin_top"
        android:layout_toRightOf="@id/go_pay_item_count"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/go_pay_item_xuxian"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/go_pay_item_image"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/filter_line" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/search_result_lg_layout_left"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:background="@drawable/product_image_bg2"
        android:orientation="vertical"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/search_result_lg_image_left"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:src="@drawable/image_bg" />

        <TextView
            android:id="@+id/search_result_lg_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_result_lg_image_left"
            android:layout_below="@+id/search_result_lg_image_left"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/search_result_lg_sell_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_result_lg_title_left"
            android:layout_below="@+id/search_result_lg_title_left"
            android:textSize="12sp"
            android:text="已售：" />

        <TextView
            android:id="@+id/search_result_lg_sell_num_left"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_result_lg_title_left"
            android:layout_toRightOf="@+id/search_result_lg_sell_left"
            />

        <TextView
            android:id="@+id/search_result_lg_price_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/search_result_lg_sell_left"
            android:layout_alignRight="@+id/search_result_lg_image_left"
            android:layout_below="@+id/search_result_lg_title_left"
            android:textColor="@color/price_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_result_lg_layout_right"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:background="@drawable/product_image_bg2"
        android:orientation="vertical"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/search_result_lg_image_right"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:src="@drawable/image_bg" />

        <TextView
            android:id="@+id/search_result_lg_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_result_lg_image_right"
            android:layout_below="@+id/search_result_lg_image_right"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/search_result_lg_sell_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_result_lg_title_right"
            android:layout_below="@+id/search_result_lg_title_right"
            android:textSize="12sp"
            android:text="已售：" />

        <TextView
            android:id="@+id/search_result_lg_sell_num_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_below="@+id/search_result_lg_title_right"
            android:layout_toRightOf="@+id/search_result_lg_sell_right"
		 />

        <TextView
            android:id="@+id/search_result_lg_price_right"
            android:layout_width="wrap_content"
	android:layout_alignBaseline="@id/search_result_lg_sell_num_right"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/search_result_lg_image_right"
            android:layout_below="@+id/search_result_lg_title_right"
            android:textColor="@color/price_color"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_add_cart" >

        <TextView
            android:id="@+id/tv_yirihui_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:text="@string/yirihui_delay"
            android:textColor="@color/text_color_80" />

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_toRightOf="@id/tv_yirihui_long"
            android:textColor="@color/theme"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_hour_add_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_hour"
            android:text="@string/yirihui_hour_add"
            android:textColor="@color/text_color_80"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_hour_add_third"
            android:textColor="@color/theme"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_hour_add_add_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_min"
            android:text="@string/yirihui_min_add"
            android:textColor="@color/text_color_80"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_hour_add_add_third"
            android:textColor="@color/theme"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_second"
            android:text="@string/yirihui_second_add"
            android:textColor="@color/text_color_80"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_pay_selector"
            android:padding="6dp"
            android:text="@string/yirihui_must_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_theme_textview_bg" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_add"
            android:background="@color/line_color"
            android:contentDescription="@string/yidejia" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width_add"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_left"
        android:paddingTop="@dimen/margin_left" >

      <!--  <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >  -->

            <RelativeLayout
                android:id="@+id/re_yirihui_left"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/yirihui"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_yrh_big"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/image_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add"
                android:layout_marginRight="@dimen/margin_left_add"
                 >

                <TextView
                    android:id="@+id/tv_yirihui_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textColor="@color/text_color_80" />

                <TextView
                    android:id="@+id/tv_yirihui_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_yirihui_detail"
                    android:layout_marginTop="@dimen/margin_add_cart"
                    android:text="@string/go_pay_show_pay_money"
                    android:textColor="@color/theme" />

                <RelativeLayout
                    android:id="@+id/re_yirihui_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_yirihui_price"
                    android:layout_marginTop="@dimen/margin_add_cart" >

                    <TextView
                        android:id="@+id/tv_yirihui_count_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/cart_count"
                        android:textColor="@color/text_color_80" />

                    <TextView
                        android:id="@+id/tv_yirihui_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_yirihui_count_text"
                        android:layout_marginLeft="@dimen/margin_left_add"
                        android:background="@drawable/theme_textview_background"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_yirihui_detail" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/theme_textview_background"
                        android:contentDescription="@string/yidejia" />

                    <ImageView
                        android:id="@+id/iv_yrh_small"
                        android:layout_width="@dimen/all_buy_produce_right"
                        android:layout_height="@dimen/all_buy_produce_right"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:contentDescription="@string/yidejia"
                        android:src="@drawable/image_bg" />
                </RelativeLayout>
            </RelativeLayout>
        <!-- </RelativeLayout> -->
    </LinearLayout>

   <!--  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_theme_textview_bg" >
 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_add"
            android:background="@color/line_color"
            android:contentDescription="@string/yidejia" />
   <!--  </RelativeLayout> -->

</LinearLayout>
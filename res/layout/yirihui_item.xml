<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_cart_textview_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_add_cart" >

        <TextView
            android:id="@+id/tv_yirihui_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:text="@string/yirihui_delay" />

        <TextView
            android:id="@+id/tv_main_hot_hour_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_toRightOf="@id/tv_yirihui_long"
            android:text="@string/hour"
            android:textColor="@color/theme"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_main_hot_hour_add_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_main_hot_hour_third"
            android:text="@string/yirihui_hour_add"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_main_hot_mini_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_main_hot_hour_add_third"
            android:text="@string/mint"
            android:textColor="@color/theme"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_main_hot_hour_add_add_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_main_hot_mini_third"
            android:text="@string/yirihui_min_add"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:id="@+id/tv_main_hot_second_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_main_hot_hour_add_add_third"
            android:text="@string/second"
            android:textColor="@color/theme"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_add"
            android:layout_toRightOf="@id/tv_main_hot_second_third"
            android:text="@string/yirihui_second_add"
            android:textSize="@dimen/textsize_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/theme_textview_background"
            android:text="@string/yirihui_must_pay"
            android:textColor="@color/color_sort_text_color_press"
            android:textSize="@dimen/textsize_big" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/width_add"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_left"
        android:paddingTop="@dimen/margin_left" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/re_yirihui_left"
                android:layout_width="@dimen/yirihui"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/user_head_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add"
                android:layout_marginRight="@dimen/margin_left_add"
                android:layout_toRightOf="@id/re_yirihui_left" >

                <TextView
                    android:id="@+id/tv_main_hot_yirihui_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/free_post" />

                <TextView
                    android:id="@+id/tv_main_hot_yirihui_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_main_hot_yirihui_detail"
                    android:layout_marginTop="@dimen/margin_add_cart"
                    android:text="@string/go_pay_show_pay_money"
                    android:textColor="@color/theme" />

                <RelativeLayout
                    android:id="@+id/re_yirihui_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_main_hot_yirihui_price"
                    android:layout_marginTop="@dimen/margin_add_cart" >

                    <TextView
                        android:id="@+id/tv_yirihui_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart_count" />

                    <TextView
                        android:id="@+id/tv_main_hot_yirihui_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_yirihui_count"
                        android:text="@string/hour"
                        android:textColor="@color/white"
                        android:background="@drawable/theme_yuan" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_main_hot_yirihui_detail"
                    android:layout_alignParentRight="true" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/theme_textview_background"
                        android:contentDescription="@string/yidejia" />

                    <ImageView
                        android:layout_width="@dimen/all_buy_produce_right"
                        android:layout_height="@dimen/all_buy_produce_right"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:contentDescription="@string/yidejia"
                        android:src="@drawable/user_head_bg" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/re_down_home_layout"
        android:layout_width="@dimen/list_padding"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/downbg"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/iv_down_home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/actiobar_margin_left"
            android:clickable="false"
            android:contentDescription="@string/yidejia"
            android:src="@drawable/bg_down_home" />

        <TextView
            android:id="@+id/tv_down_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down_home_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/down_home_text"
            android:textColor="@color/color_down_text"
            android:textSize="@dimen/textsize_small_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_down_guang_layout"
        android:layout_width="@dimen/list_padding"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/downbg"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/iv_down_guang_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_down_guang"
            android:clickable="false"
            android:contentDescription="@string/yidejia" />

        <TextView
            android:id="@+id/tv_down_guang_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down_guang_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/down_guang_text"
            android:textColor="@color/color_down_text"
            android:textSize="@dimen/textsize_small_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_down_search_layout"
        android:layout_width="@dimen/list_padding"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/downbg"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/iv_down_search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_down_search"
            android:clickable="false"
            android:contentDescription="@string/yidejia" />

        <TextView
            android:id="@+id/tv_down_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down_search_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/down_search_text"
            android:textColor="@color/color_down_text"
            android:textSize="@dimen/textsize_small_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_down_shopping_layout"
        android:layout_width="@dimen/list_padding"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/downbg"
        android:clickable="true"
        android:focusable="true" >

        <!-- android:background="@drawable/frist_my_mall_realution" -->

        <ImageView
            android:id="@+id/iv_down_shopping_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_down_cart"
            android:clickable="false"
            android:contentDescription="@string/yidejia" />

        <TextView
            android:id="@+id/tv_down_shopping_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down_shopping_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/down_shopping_text"
            android:textColor="@color/color_down_text"
            android:textSize="@dimen/textsize_small_small" />
        <!--  -->

        <TextView
            android:id="@+id/down_shopping_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/shape_bg_cart_num"
            android:gravity="center"
            android:text="@string/hour"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small_small" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_down_my_layout"
        android:layout_width="@dimen/list_padding"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/downbg"
        android:clickable="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/iv_down_my_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_down_mall"
            android:clickable="false"
            android:contentDescription="@string/yidejia" />

        <TextView
            android:id="@+id/tv_down_my_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_down_my_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/down_my_text"
            android:textColor="@color/color_down_text"
            android:textSize="@dimen/textsize_small_small" />
    </RelativeLayout>

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <RelativeLayout 
         android:id="@+id/down_parent_layout"
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="52dp"
         android:background="@drawable/main_downbg"
         android:orientation="horizontal">
         <include layout="@layout/main_down"/>
     </RelativeLayout>

       <ScrollView android:id="@+id/pull_refresh_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_bg"
        android:layout_above="@+id/down_parent_layout"
           >
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
         
           
		
            <RelativeLayout android:id="@+id/slide_parent_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <include layout="@layout/main_slide_image"/>
            </RelativeLayout>
           <!--   -->
            <RelativeLayout android:id="@+id/function_parent_layout"
                android:layout_below="@+id/slide_parent_layout"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="181dp">
            <include layout="@layout/main_function" />
            </RelativeLayout>
            <RelativeLayout android:id="@+id/notice_parent_layout"
                android:layout_below="@+id/function_parent_layout"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            
                <TextView android:id="@+id/main_mall_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_mall_notice_text"
                />
            <TextView android:id="@+id/main_mall_notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/main_mall_notice"
                android:text="jlkjlkj"
                android:singleLine="true"
                android:ellipsize="end"
                />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/hot_mall_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notice_parent_layout"
                
                android:padding="5dp" >
            	<include layout="@layout/main_hot_sell"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acymei_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hot_mall_parent_layout"
                
                android:padding="5dp" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inerbty_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/acymei_parent_layout"
                
                android:padding="5dp" >
            </RelativeLayout>
        
        </RelativeLayout>
        
	
	 </ScrollView>
   
     
     

</RelativeLayout>
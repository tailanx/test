<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme" >

    <TextView
        android:id="@+id/integeral_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="@string/back"
        
        android:layout_marginTop="@dimen/mall_list_padding_add"
        android:textColor="@color/color_sort_text_color_press"
        android:textSize="@dimen/textsize_small" />

    <TextView
        android:id="@+id/integeral_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        
        android:layout_marginTop="@dimen/mall_list_padding_add"
        android:layout_marginRight="@dimen/margin_left"
        android:text="@string/integeral_produce"
        android:textColor="@color/color_sort_text_color_press"
        android:textSize="@dimen/textsize_small" />

    <LinearLayout
        android:id="@+id/ll_search_result_tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/actiobar_margin_top"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_left"
        android:layout_marginTop="@dimen/actiobar_margin_top"
        android:layout_toLeftOf="@id/integeral_edit"
        android:layout_toRightOf="@id/integeral_back"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_search_result_selled"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/integeral_selecter_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/integeral"
            android:textColor="@color/color_sort_text_color"
            android:textSize="@dimen/textsize_small_small_small" />

        <TextView
            android:id="@+id/tv_search_result_popularity"
            android:layout_width="@dimen/width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/integeral_selecter_bg_right"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/integeral_youhui"
            android:textColor="@color/color_sort_text_color"
            android:textSize="@dimen/textsize_small_small_small" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_search_result_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_search_result_tabhost" />

</RelativeLayout>
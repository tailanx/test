<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_function_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/main_function_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_theme_textview_bg" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_add"
            android:background="@color/line_color"
            android:contentDescription="@string/yidejia" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/function_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_function_imageview"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_my_order_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/myorders" />

            <TextView
                android:id="@+id/main_my_order_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_my_order_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_order_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_my_order"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_my_favorite_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/myfavorites" />
            <!-- android:drawableTop="@drawable/main_my_favorite" -->

            <TextView
                android:id="@+id/main_my_favorite_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_my_favorite_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_favorite_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_my_favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_event_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/activity" />

            <TextView
                android:id="@+id/main_event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_event_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_event_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_vip_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/recharge" />
            <!-- android:drawableTop="@drawable/main_vip" -->

            <TextView
                android:id="@+id/main_vip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_vip_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_message_center_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_member"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/function_layout_top"
        android:layout_marginTop="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_history_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/message_center" />
            <!-- android:drawableTop="@drawable/main_history" -->

            <TextView
                android:id="@+id/main_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_history_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_history_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_history"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_voucher_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/yirihui" />

            <TextView
                android:id="@+id/main_voucher_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_voucher_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_yirihui"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_coupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_skin_test_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/coupon" />
            <!--
 	            android:drawableTop="@drawable/main_skin_test"
android:background="@drawable/skin_test"                android:background="@drawable/function_skin_selector"
            -->

            <TextView
                android:id="@+id/main_skin_test_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_skin_test_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_voucher_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_skin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_bg_main_fun"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_message_center_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/skin_test" />

            <TextView
                android:id="@+id/main_message_center_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_message_center_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/main_skin_test_text"
                android:textColor="@color/text_color_80" />

            <RelativeLayout
                android:id="@+id/function_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selecter_main_function"
                android:clickable="true" >
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
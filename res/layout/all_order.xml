<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
     >

    
          <LinearLayout 
              android:id="@+id/all_order_linearlayout1"
            
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
            
              android:orientation="horizontal"
             
              >

              <TextView
                  android:id="@+id/all_order_week"
                  android:background="@drawable/product_details_selected"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:layout_weight="1.0"
                  android:textColor="#000000"
                  android:text="近一周"
                  />

              <TextView 
                      android:id="@+id/all_order_moonth"
                  	  android:background="@drawable/product_details_bg"
                  	  android:layout_width="wrap_content"
                  	  android:layout_height="wrap_content"
                  	  android:layout_weight="1.0"
                  	  android:layout_marginLeft="0sp"
                  	  android:gravity="center"
                  	  android:text="近一月"
                  	  android:textColor="#ed217c"
                  	 />
              <TextView 
                      android:id="@+id/all_order_year"
                  	  android:background="@drawable/product_details_bg"
                  	  android:layout_width="wrap_content"
                  	  android:layout_height="wrap_content"
                  	  android:layout_weight="1.0"
                  	  android:text="近一年"
                  	  android:gravity="center"
                  	  android:textColor="#ed217c"
                  	 />
          </LinearLayout>
          
    
      	
                  <RelativeLayout
            android:id="@+id/all_order_relative_line"
            android:layout_below="@+id/all_order_linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


             >
	
            <ImageView
                android:id="@+id/iv_bottom_line"
                android:layout_width="40dp"
                android:layout_height="0dip"
                
                android:scaleType="matrix"
                android:src="#fff" />
        </RelativeLayout>

    
         <android.support.v4.view.ViewPager
      	android:layout_below="@id/all_order_relative_line"
        android:id="@+id/all_order_vPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:descendantFocusability="afterDescendants"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/qdbg_color" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/qdbg1" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/qdbgmiddle_down" >

                <LinearLayout
                    android:id="@+id/qdbg_mid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mall_list_padding"
                    android:layout_marginRight="@dimen/mall_list_padding"
                    android:orientation="vertical"
                    android:background="@drawable/qdbg_middle" >
                </LinearLayout>
                
                <ImageView
                    android:id="@+id/iv_qiandao_button"
                    android:layout_width="@dimen/base_info_image"
                    android:layout_height="@dimen/all_buy_produce_right"
                    android:layout_alignRight="@id/qdbg_mid"
                    android:layout_marginRight="@dimen/margin_left"
                    android:layout_marginTop="@dimen/margin_top"
                    android:clickable="true"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/qiandao_selector" />
                
                <TextView
                    android:id="@+id/tv_sign_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/actiobar_margin_top"
                    android:layout_marginLeft="@dimen/magin_left_add"
                    android:layout_marginTop="@dimen/head_padding"
                    android:text="@string/qiandao_leiji"
                    android:textColor="@color/white_white"
                    android:textSize="@dimen/textsize_big_big" />

                <LinearLayout
                    android:id="@+id/iv_qiandao_button_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignLeft="@id/tv_sign_text"
                    android:layout_marginRight="@dimen/margin_left"
                    android:layout_marginTop="@dimen/margin_top_add"
                    android:layout_toLeftOf="@id/iv_qiandao_button"
                    android:background="@drawable/daysbg2"
                    android:contentDescription="@string/yidejia" >

                    <TextView
                        android:id="@+id/tv_sign_count1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/daysbg1"
                        android:gravity="center"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/textsize_big_big" />

                    <TextView
                        android:id="@+id/tv_sign_count2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/daysbg1"
                        android:gravity="center"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/textsize_big_big" />

                    <TextView
                        android:id="@+id/tv_sign_count3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/daysbg1"
                        android:gravity="center"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/textsize_big_big" />
                </LinearLayout>

                
            </RelativeLayout>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mall_list_padding"
                android:layout_marginRight="@dimen/mall_list_padding"
                android:background="@drawable/qdbg_bottom"
                android:paddingLeft="@dimen/margin_left_more"
                android:text="@string/qiandao_rule"
                android:textColor="@color/white_white"
                android:textSize="@dimen/textsize_big" />


                    android:id="@+id/editor_recommended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:text="应用推荐"
                    android:textSize="24dp" />


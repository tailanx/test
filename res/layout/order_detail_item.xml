<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/new_order_statusbg_midle" >

    <ImageView
        android:id="@+id/order_detail_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:background="@drawable/product_image_bg"
        android:padding="8dp" />

    <TextView
        android:id="@+id/order_detail_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/order_detail_item_image"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/text_color_80"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/order_detail_item_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_detail_item_text"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/order_detail_item_image"
        android:textColor="@color/theme"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_detail_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_detail_item_sum"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/order_detail_item_image"
        android:text="@string/amount"
        android:textColor="@color/text_color_80"
        android:textSize="16sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skinbg" >

    <ImageView
        android:id="@+id/skin_test_answer_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/back1" />

    <RelativeLayout
        android:id="@+id/skin_test_answer_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/skin_test_answer_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pages" />

            <TextView
                android:id="@+id/skin_test_answer_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/skin_test_answer_index"
                android:layout_below="@id/skin_test_answer_index"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp" >

            <ImageView
                android:id="@+id/skin_test_answer_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pageup" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/skin_test_answer_pre"
                android:layout_below="@id/skin_test_answer_pre"
                android:text="上一题"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/skin_test_answer_bottom"
        android:layout_below="@id/skin_test_answer_back"
        android:layout_marginTop="20dp" 
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/skin_test_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:text="为了方便我们的护肤顾问为您服务，以及免费获取妍诗美的护肤资讯，请您留下您的相关信息"
                android:textColor="@color/price_color"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/listbg"
                >

                <TextView
                    android:id="@+id/skin_test_textview"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="您的姓名："
                    android:padding="15dp" 
                    android:textColor="@color/price_color" />

                <EditText
                    android:id="@+id/skin_test_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/skin_test_textview"
                    android:background="@null"
                    android:maxLength="5"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/listbg" >

                <TextView
                    android:id="@+id/skin_test_answer_bir"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="性别："
                    android:textColor="@color/price_color"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/skin_test_answer_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/skin_test_answer_bir"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/skin_test_answer_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="女"
                        android:textColor="@color/price_color" />

                    <RadioButton
                        android:id="@+id/skin_test_answer_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textColor="@color/price_color" />
                </RadioGroup>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/listbg" >

                <TextView
                    android:id="@+id/skin_test_answer_sex"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="生日:"
                    android:textColor="@color/price_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/skin_test_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/skin_test_answer_sex"
                    android:layout_centerVertical="true"
                    android:alpha="0.4"
                    android:text="请输入您的生日"
                    android:textColor="@color/price_color" />
                <!--
                <Spinner
                    android:id="@+id/exchange_spinner_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/skin_test_answer_sex"
                    android:background="@null"
                    android:entries="@array/year" />

                <TextView
                    android:id="@+id/skin_test_answer_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/exchange_spinner_year"
                    android:text="年"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/exchange_spinner_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/skin_test_answer_year"
                    android:background="@null"
                    android:entries="@array/month"
                    android:prompt="@string/month" />

                <TextView
                    android:id="@+id/skin_test_answer_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/exchange_spinner_month"
                    android:text="月"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/exchange_spinner_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/skin_test_answer_month"
                    android:background="@null"
                    android:entries="@array/day"
                    android:prompt="@string/day" />
-->
<!--  
                <TextView
                    android:id="@+id/skin_test_answer_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/exchange_spinner_day"
                    android:text="日"
                    android:textSize="15sp"/>
                -->
-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/listbg" >

                <TextView
                    android:id="@+id/skin_test_answer_qq"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="QQ号:"
                    android:textColor="@color/price_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/skin_test_answer_qqnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/skin_test_answer_qq"
                    android:background="@null"
                    android:maxLength="10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/listbg" >

                <TextView
                    android:id="@+id/skin_test_answer_phone"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:text="手机号码:"
                    android:textColor="@color/price_color"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/skin_test_answer_phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/skin_test_answer_phone"
                    android:background="@null"
                    android:maxLength="11" />
            </RelativeLayout>
            <ImageView android:id="@+id/skin_test_answer_commit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/skin_commit"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
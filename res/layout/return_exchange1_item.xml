<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/return_exchange1_item_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ret_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_detailsbg_top"
        android:gravity="center"
        android:text="状态："
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/order_statusbg_down" >

        <TextView
            android:id="@+id/return_exchange1_item_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="订单编号："
            android:textSize="15sp" />

        <TextView 
            android:id="@+id/ret_order_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/return_exchange1_item_dingdan"
            android:layout_toRightOf="@id/return_exchange1_item_dingdan"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/return_exchange1_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/return_exchange1_item_dingdan"
            android:layout_below="@id/return_exchange1_item_dingdan"
            android:layout_marginTop="8dp"
            android:text="退换货时间："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ret_the_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/return_exchange1_item_time"
            android:layout_toRightOf="@id/return_exchange1_item_time"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>
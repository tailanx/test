<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/search_result_tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/search_result_selled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/product_details_selected"
            android:gravity="center"
            android:text="@string/selled_num"
            android:textColor="@color/search_result_top"
            android:textSize="16sp" />
<!--   -->

        <LinearLayout
            android:id="@+id/search_result_price_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/product_details_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/search_result_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableRight="@drawable/price_normal"
                android:gravity="center"
                android:text="@string/price"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_result_popularity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/product_details_bg"
            android:gravity="center"
            android:text="@string/popularity"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/product_details_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/search_with_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/list_hover" />

            <ImageView
                android:id="@+id/search_with_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/thumbnails_normal" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_result_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_result_tabhost" />

</RelativeLayout>
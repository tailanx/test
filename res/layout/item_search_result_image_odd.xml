<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/search_result_lg_layout"
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:background="@drawable/product_image_bg2"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="2dp" >

        <ImageView
            android:id="@+id/search_result_lg_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:src="@drawable/image_bg" />

        <TextView
            android:id="@+id/search_result_lg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_result_lg_image"
            android:layout_below="@+id/search_result_lg_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="YS06 胶原蛋白粉"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/search_result_lg_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/search_result_lg_title"
            android:layout_below="@+id/search_result_lg_title"
            android:text="已售：" />

        <TextView
            android:id="@+id/search_result_lg_sell_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_result_lg_title"
            android:layout_toRightOf="@+id/search_result_lg_sell"
            android:text="1280" />

        <TextView
            android:id="@+id/search_result_lg_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/search_result_lg_image"
            android:layout_below="@+id/search_result_lg_title"
            android:text="$468.00"
            android:textColor="@color/price_color"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="210dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="2dp" >
    </RelativeLayout>

</LinearLayout>
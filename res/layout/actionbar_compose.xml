<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_height"
    android:background="@drawable/theme_textview_background_no_corners" >

    <TextView
        android:id="@+id/compose_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_left"
        android:clickable="true"
        android:contentDescription="@string/yidejia"
        android:text="@string/back"
        android:textColor="@color/color_sort_text_color_press"
        android:textSize="@dimen/textsize_big" />

    <TextView
        android:id="@+id/compose_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_big_big" />

</RelativeLayout>
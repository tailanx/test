<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wait_pay_relative1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/new_order_statusbg_midle" >

    <ImageView
        android:id="@+id/wait_order_item_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="@drawable/product_image_bg"
        android:padding="10dp"
         />

    <TextView
        android:id="@+id/wait_order_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/wait_order_item_image"
        android:ellipsize="end"
        android:lines="2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wait_order_item_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wait_order_item_text"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/wait_order_item_image"
        android:text="￥"
        android:textColor="#ed217c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wait_order_item_sum_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wait_order_item_text"
        android:layout_toRightOf="@id/wait_order_item_sum"
        android:textColor="#ed217c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wait_order_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wait_order_item_text"
        android:layout_marginLeft="12sp"
        android:layout_toRightOf="@id/wait_order_item_sum_price"
        android:text="数量："
        android:textColor="#ed217c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/wait_order_item_count_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wait_order_item_text"
        android:layout_toRightOf="@id/wait_order_item_count"
        android:textColor="#ed217c"
        android:textSize="15sp" />

</RelativeLayout>
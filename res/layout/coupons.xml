<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".view.CstmPayActivity" >

    <ScrollView
        android:id="@+id/coupons_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/coupons_scrollView_linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/coupons_relative2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/integration_upbg" >

                <TextView
                    android:id="@+id/coupons_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingTop="30dp"
                    android:text="您当前的积分："
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/jiefen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_toRightOf="@id/coupons_text"
                    android:paddingTop="20dp"
                    android:textColor="#ed217c"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="8dp"
                    android:text="积分获取及使用常见问题"
                    android:textSize="18sp" />
            </RelativeLayout>

            <WebView
                android:id="@+id/wb_webView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
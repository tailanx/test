<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >
    
    <TextView 
        android:id="@+id/refresh_data_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/refresh_data"
		android:textSize="14sp"        
        />
    <TextView 
        android:id="@+id/load_data_fail_textview"
        android:layout_above="@id/refresh_data_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:drawableTop="@drawable/signal"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="@string/load_data_fail"
        android:textSize="20sp"
        />
    
    <ImageView 
        android:id="@+id/refresh_data_btn"
        android:layout_below="@id/refresh_data_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_network_selecter"
        />

</RelativeLayout>

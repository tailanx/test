<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/message_item_relateview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msg_topbg" >

       
        <TextView
            android:id="@+id/message_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
         <TextView
            android:id="@+id/message_item_textview1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignBaseline="@id/message_textview2"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/message_textview2"
            android:ellipsize="end"
            android:padding="8dp"
            android:shadowColor="#00f"
            android:singleLine="true"
            android:text="会员特权!!!"
            android:textSize="20sp" />
        
    </RelativeLayout>

    <ScrollView
        android:id="@+id/message_scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_item_relateview"
        android:background="@drawable/msg_downbg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/message_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="8dp"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg" >

    <LinearLayout
        android:id="@+id/shopping_cart_sum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/shopping_cart_checkbox"
            style="@style/CustomCheckboxTheme_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/actiobar_margin_top"
            android:text="@string/cart_sum"
            android:textSize="@dimen/textsize_small_add" />

        <TextView
            android:id="@+id/shopping_cart_sum_money_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="@string/go_pay_show_pay_money"
            android:textColor="@color/theme"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shopping_cart_sum_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="@string/hour"
            android:textColor="@color/theme"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/mall_list_padding"
            android:text="@string/cart_count"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shopping_cart_sum_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="@string/hour"
            android:textColor="#ed217c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shopping_cart_gopay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add"
            android:layout_marginTop="@dimen/mall_list_padding"
            android:background="@drawable/theme_textview_background"
            android:singleLine="true"
            android:text="@string/go_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small_small" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/shopping_cart_item_goods_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_cart_sum"
        android:layout_marginBottom="1dp" >
    </ScrollView>

</RelativeLayout>
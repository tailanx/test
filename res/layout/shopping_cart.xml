<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:id="@+id/shopping_cart_sum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_cart_top"
        android:background="@drawable/theme_textview_background_no_comment"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/shopping_cart_checkbox"
            style="@style/CustomCheckboxTheme_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="总计:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shopping_cart_sum_money_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="￥"
            android:textColor="#ed217c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shopping_cart_sum_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="0.0"
            android:textColor="#ed217c"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="数量："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/shopping_cart_sum_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="0"
            android:textColor="#ed217c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_shopping_cart_gopay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add"
            android:layout_marginTop="@dimen/mall_list_padding"
            android:background="@drawable/theme_textview_background"
            android:text="@string/go_pay"
            android:textColor="@color/white" />
    </LinearLayout>
<!--      <com.handmark.pulltorefresh.library.PullToRefreshScrollView -->

    <ScrollView
        android:id="@+id/shopping_cart_item_goods_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopping_cart_sum"
        android:layout_marginBottom="1dp" >

        <!--
        <LinearLayout
            
            android:id="@+id/shopping_cart_relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >
        </LinearLayout>
        -->
    </ScrollView>
<!--    </com.handmark.pulltorefresh.library.PullToRefreshScrollView> -->

</RelativeLayout>
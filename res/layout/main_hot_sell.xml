<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rv_main_hot_sell_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yirihui_bg" >

            <TextView
                android:id="@+id/tv_main_hot_sell_yirihui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/white_bg_padding"
                android:text="@string/yirihui"
                android:textSize="@dimen/textsize_small_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_add"
                android:layout_toRightOf="@id/tv_main_hot_sell_yirihui"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/yirihui_add"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_main_hot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_main_hot_sell_title"
            android:layout_marginTop="@dimen/width_add"
            android:background="#ffffff"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_left"
            android:paddingTop="@dimen/margin_left" >

            <RelativeLayout
                android:id="@+id/re_yirihui_left"
                android:layout_width="@dimen/yirihui"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/magin_left_add_add"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/user_head_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_add"
                android:layout_marginRight="@dimen/margin_left_add" >

                <TextView
                    android:id="@+id/tv_main_hot_yirihui_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/free_post" />

                <TextView
                    android:id="@+id/tv_main_hot_yirihui_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_main_hot_yirihui_detail"
                    android:text="@string/go_pay_show_pay_money"
                    android:textColor="@color/theme" />

                <RelativeLayout
                    android:id="@+id/re_yirihui_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_main_hot_yirihui_price" >

                    <TextView
                        android:id="@+id/tv_yirihui_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cart_count" />

                    <TextView
                        android:id="@+id/tv_main_hot_yirihui_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_toRightOf="@id/tv_yirihui_count"
                        android:background="@drawable/theme_yuan"
                        android:text="@string/hour"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/re_yirihui_count"
                    android:layout_marginTop="@dimen/actiobar_margin_left" >

                    <TextView
                        android:id="@+id/tv_main_hot_hour_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/theme_textview_background"
                        android:text="@string/hour"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_main_hot_hour_add_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_add"
                        android:layout_toRightOf="@id/tv_main_hot_hour_third"
                        android:text="@string/maohao"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_main_hot_mini_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_add"
                        android:layout_toRightOf="@id/tv_main_hot_hour_add_third"
                        android:background="@drawable/theme_textview_background"
                        android:text="@string/mint"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_main_hot_hour_add_add_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_add"
                        android:layout_toRightOf="@id/tv_main_hot_mini_third"
                        android:text="@string/maohao"
                        android:textColor="@color/theme"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/tv_main_hot_second_third"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left_add"
                        android:layout_toRightOf="@id/tv_main_hot_hour_add_add_third"
                        android:background="@drawable/theme_textview_background"
                        android:text="@string/second"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_main_hot_yirihui_detail"
                    android:layout_marginRight="@dimen/head_padding"
                    android:layout_marginTop="@dimen/head_padding" >

                    <ImageView
                        android:id="@+id/iv_song"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/theme_textview_background"
                        android:contentDescription="@string/yidejia" />

                    <ImageView
                        android:layout_width="@dimen/all_buy_produce_right"
                        android:layout_height="@dimen/all_buy_produce_right"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:contentDescription="@string/yidejia"
                        android:src="@drawable/user_head_bg" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_main_hot"
            android:background="@drawable/main_theme_textview_bg" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_add"
                android:background="@color/line_color"
                android:contentDescription="@string/yidejia" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_main_hot_sell_title_all_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_left_add"
        android:background="@drawable/yirihui_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_main_hot_sell_all_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/white_bg_padding"
            android:text="@string/all_buy"
            android:textSize="@dimen/textsize_small_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_left"
            android:singleLine="true"
            android:text="@string/watch_all"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/main_bg_head"
            android:layout_weight="1"
            android:background="@drawable/main_theme_textview_bg"
            android:paddingBottom="@dimen/actiobar_margin_top" >

            <ImageView
                android:id="@+id/iv_main_all_buy_left_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/yirihui"
                android:layout_centerVertical="true"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/user_head" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/main_bg_head"
            android:layout_marginLeft="@dimen/width_add"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_info_match"
                android:background="@drawable/main_theme_textview_bg" >

                <ImageView
                    android:id="@+id/iv_main_all_buy_left_right_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/all_buy_produce_right"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/user_head" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_info_match"
                android:layout_marginTop="@dimen/width_add"
                android:background="@drawable/main_theme_textview_bg" >

                <ImageView
                    android:id="@+id/iv_main_all_buy_left_right_down_image"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/all_buy_produce_right"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/user_head" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_theme_textview_bg" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_add"
            android:background="@color/line_color"
            android:contentDescription="@string/yidejia" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rv_main_hot_sell_title_free_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/magin_left_add"
        android:background="@drawable/yirihui_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_main_hot_sell_free_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/white_bg_padding"
            android:text="@string/free_pay_title"
            android:textSize="@dimen/textsize_small_add" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_theme_textview_bg" >

        <ImageView
            android:id="@+id/iv_main_hot_sell_free_pay_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_left"
            android:layout_marginTop="@dimen/margin_left_add"
            android:background="@drawable/adbanner"
            android:contentDescription="@string/yidejia" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/main_bg_head"
            android:layout_weight="1"
            android:background="@drawable/main_theme_textview_bg"
            android:padding="@dimen/margin_left" >

            <ImageView
                android:id="@+id/iv_main_all_buy_left_image_down"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/yirihui"
                android:layout_centerVertical="true"
                android:contentDescription="@string/yidejia"
                android:src="@drawable/user_head" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/width"
            android:layout_height="@dimen/main_bg_head"
            android:layout_marginLeft="@dimen/width_add"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_info_match"
                android:layout_marginTop="@dimen/width_add"
                android:background="@drawable/main_theme_textview_bg"
                android:padding="@dimen/margin_left_add" >

                <ImageView
                    android:id="@+id/iv_main_all_buy_left_right_image_right_up"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/all_buy_produce_right"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/user_head" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_info_match"
                android:layout_marginTop="@dimen/width_add"
                android:background="@drawable/main_theme_textview_bg"
                android:padding="@dimen/margin_left_add" >

                <ImageView
                    android:id="@+id/iv_main_all_buy_left_right_down_image_right_down"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/all_buy_produce_right"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/yidejia"
                    android:src="@drawable/user_head" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/magin_left_add"
        android:background="@drawable/main_theme_textview_bg" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/width_add"
            android:background="@color/line_color"
            android:contentDescription="@string/yidejia" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/main2_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/topbg" >

        <RelativeLayout
            android:id="@+id/main2_main2_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/topbg" >

            <TextView
                android:id="@+id/main2_main2_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:onClick="doClick"
                android:text="我的商城"
                android:textColor="#ffeeeeee"
                android:textSize="24dp" />

            <Button
                android:id="@+id/main2_main2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/back_button_selector"
                android:onClick="doClick" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main2_main2_relative2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/main2_main2_top"
            android:background="@drawable/downbg" >
        </RelativeLayout>
    </RelativeLayout>

    <!-- 下部分 -->

    <LinearLayout
        android:id="@+id/main2_bottom"
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/topbg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/main2_main_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="首页"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/main2_main_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="逛发现"
            android:textSize="22dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main2_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main2_top"
        android:layout_below="@id/main2_bottom"
        android:background="@drawable/downbg" >
    </RelativeLayout>

</RelativeLayout>
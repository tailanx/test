<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/iv_youhuiquan_image"
        android:layout_width="@dimen/main_bg_head"
        android:layout_height="@dimen/base_info_image"
        android:background="@color/theme"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_youhuiquan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_youhuiquan_price_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add_add"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_youhuiquan_price_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add_add"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_youhuiquan_image"
        android:layout_alignTop="@id/iv_youhuiquan_image"
        android:layout_toRightOf="@id/iv_youhuiquan_image"
        android:background="@drawable/main_cart_textview_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_youhuiquan_price_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add_add"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour"/>

        <TextView
            android:id="@+id/tv_youhuiquan_price_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add_add"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour" />

        <TextView
            android:id="@+id/tv_youhuiquan_price_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add_add"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour"/>

        <TextView
            android:id="@+id/tv_youhuiquan_price_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/magin_left_add_add"
            android:layout_marginTop="@dimen/margin_left"
            android:text="@string/hour"
            android:textColor="@color/text_press_color" />
    </LinearLayout>

</RelativeLayout>
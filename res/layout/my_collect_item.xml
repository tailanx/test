<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_statusbg_top2" >

    <RelativeLayout
        android:id="@+id/my_collect_item_relative1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/my_collect_item__imageview1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/product_image_bg"
            android:padding="10dp" />

        <TextView
            android:id="@+id/my_collect_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/my_collect_item_right"
            android:layout_toRightOf="@id/my_collect_item__imageview1"
            android:ellipsize="end"
            android:lines="2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/my_collect_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_collect_item_text"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/my_collect_item__imageview1"
            android:textColor="#ed217c"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_collect_item_already_sell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_collect_item_money"
            android:layout_marginLeft="12sp"
            android:layout_toRightOf="@id/my_collect_item__imageview1"
            android:text="已售："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_collect_item_sum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_collect_item_money"
            android:layout_toRightOf="@+id/my_collect_item_already_sell"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_collect_item_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_collect_item_money"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/my_collect_item_sum1"
            android:text="评论:"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/my_collect_item_sum2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_collect_item_money"
            android:layout_toRightOf="@+id/my_collect_item_comments"
            android:textSize="15sp" />

        <TextView
            android:id="@id/my_collect_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow" />
    </RelativeLayout>

</RelativeLayout>
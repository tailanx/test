<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg" >

    <LinearLayout
        android:id="@+id/new_address_tablelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mall_list_padding"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/new_address_tablerow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_theme_textview_bg"
            android:padding="@dimen/margin_left" >

            <TextView
                android:id="@+id/new_address_item_textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/addresss_default_name_add"
                android:textSize="@dimen/textsize_small" />

            <EditText
                android:id="@+id/new_address_item_edittext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/new_address_item_textview1"
                android:background="@null"
                android:hint=""
                android:maxLength="6"
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_theme_textview_bg" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_add"
                android:background="@drawable/filter_line"
                android:contentDescription="@string/yidejia" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_address_tablerow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_theme_textview_bg"
            android:padding="@dimen/margin_left" >

            <TextView
                android:id="@+id/new_address_item_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:text="@string/phone_number1"
                android:textSize="@dimen/textsize_small" />

            <EditText
                android:id="@+id/new_address_item_edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/new_address_item_textview2"
                android:background="@null"
                android:hint=""
                android:singleLine="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_theme_textview_bg" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_add"
                android:background="@drawable/filter_line"
                android:contentDescription="@string/yidejia" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_address_tablerow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_left"
            android:background="@drawable/main_theme_textview_bg" >

            <TextView
                android:id="@+id/new_address_item_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/mall_list_padding_add"
                android:text="@string/addresss_detail_add"
                android:textSize="@dimen/textsize_small" />

            <LinearLayout
                android:id="@+id/new_address_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/new_address_item_textview3"
                android:background="@drawable/clear_conditions" >

                <TextView
                    android:id="@+id/country1"
                    android:layout_width="@dimen/magin_left_add_add"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/sheng"
                    android:textSize="@dimen/textsize_small_small" />

                <TextView
                    android:id="@+id/city1"
                    android:layout_width="@dimen/magin_left_add_add"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/shi"
                    android:textSize="@dimen/textsize_small_small" />

                <TextView
                    android:id="@+id/district1"
                    android:layout_width="@dimen/magin_left_add_add"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/xianzhen"
                    android:textSize="@dimen/textsize_small_small" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_theme_textview_bg" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_add"
                android:background="@drawable/filter_line"
                android:contentDescription="@string/yidejia" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/new_address_tablerow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_theme_textview_bg"
            android:padding="@dimen/margin_left" >

            <TextView
                android:id="@+id/new_address_item_textview2_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left"
                android:gravity="left"
                android:text="@string/addresss_detail"
                android:textSize="@dimen/textsize_small" />

            <EditText
                android:id="@+id/new_address_item_edittext3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/new_address_item_textview2_add"
                android:background="@null"
                android:hint=""
                android:singleLine="true"
                android:textSize="@dimen/textsize_small" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
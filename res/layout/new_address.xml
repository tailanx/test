    <TableLayout
        android:id="@+id/new_address_tablelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4sp"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:layout_marginTop="4sp"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/new_address_tablerow1"
            android:background="@drawable/commentbg_up" >

            <TextView
                android:id="@+id/new_address_item_textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="收货人姓名："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/new_address_item_edittext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:maxLength="5"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/new_address_tablerow2"
            android:layout_marginTop="1dp"
            android:background="@drawable/commentbg_middle" >

            <TextView
                android:id="@+id/new_address_item_textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:text="手机号码："
                android:textSize="15sp" />

            <EditText
                android:id="@+id/new_address_item_edittext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:phoneNumber="true"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:id="@+id/new_address_tablerow3"
            android:layout_marginTop="1dp"
            android:background="@drawable/commentbg_middle" >

            <TextView
                android:id="@+id/new_address_item_textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:text="所在地区："
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" >

                <Spinner
                    android:id="@+id/province"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="省"
                    android:textSize="5sp" />

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/province"
                    android:text="市"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/district"
                    android:layout_width="58sp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/city"
                    
                    android:text="区"
                    android:textSize="15sp" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/new_address_tablerow4"
            android:layout_marginTop="1dp"
            android:background="@drawable/commentbg_down" >

            <TextView
                android:id="@+id/new_address_item_textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="left"
                android:text="详细地址:"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/new_address_item_edittext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:textSize="13sp"
                android:singleLine="true" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
    <ScrollView
        android:id="@+id/return_exchange_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/return_exchange_scrollView_linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/return_exchange_produce"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/return_exchange_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="12dp"
                    android:drawableLeft="@drawable/all_orders_icon"
                    android:text="订单状态："
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/return_exchange_item_textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/return_exchange_item"
                    android:layout_alignParentRight="true"
                    android:paddingRight="8dp"
                    android:text="订单号："
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/return_exchange_relative2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/return_exchange_produce"
                android:background="@drawable/new_order_statusbg_midle" >

                <ListView
                    android:id="@+id/return_exchange_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="75dp"
                android:background="@drawable/order_statusbg_down" >

                <TextView
                    android:id="@+id/return_exchange_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:text="订单总额："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/return_exchange_sum_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/return_exchange_sum"
                    android:textColor="#ed217c"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/return_exchange_item_payment"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/complete"
                    android:text="申请"
                    android:textColor="#eeeeee"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/return_exchange_item_textview7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/return_exchange_sum"
                    android:layout_marginLeft="8dp"
                    android:text="数量："
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
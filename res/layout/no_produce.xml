<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/no_produce_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/gouwuche" />

    <TextView
        android:id="@+id/no_produce_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_produce_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="购物车是空的"
        android:textColor="#b4b4b4"
        android:textSize="15sp" />

    <Button
        android:id="@+id/no_produce_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/no_produce_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/clear_search"
        android:text="去逛一下"
        android:textColor="#eeeeee"
        android:textSize="15sp" />

</RelativeLayout>
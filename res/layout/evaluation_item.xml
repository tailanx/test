<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/evaluation_item_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/productlist_bg" >

        <ImageView
            android:id="@+id/evaluation_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/product_image_bg"
            android:padding="8dp" />

        <TextView
            android:id="@+id/evaluation_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/margin_left_more"
            android:layout_toRightOf="@id/evaluation_item_image"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textSize="@dimen/textsize_small_add" />

        <TextView
            android:id="@+id/evaluation_item_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_item_text"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/actiobar_margin_top"
            android:layout_toRightOf="@id/evaluation_item_image"
            android:textColor="#ed217c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/evaluation_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_item_text"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="@dimen/actiobar_margin_top"
            android:layout_toRightOf="@id/evaluation_item_sum"
            android:text="数量："
            android:textColor="#ed217c"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@id/evaluation_item_relative"
        android:background="@drawable/main_cart_textview_bg" >

        <TextView
            android:id="@+id/evaluation_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="15dp"
            android:text="订单总额："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/evaluation_sum_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/evaluation_sum"
            android:textColor="#ed217c"
            android:textSize="16sp" />

        <Button
            android:id="@+id/evaluation_item_evaluation"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/theme_textview_background"
            android:text="评价"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/evaluation_item_total_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_sum"
            android:layout_marginLeft="@dimen/margin_left"
            android:text="数量："
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>
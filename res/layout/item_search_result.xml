<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/search_result_small_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/product_image_bg" />

    <ImageView
        android:id="@+id/search_result_small_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/search_result_arrow" />

    <TextView
        android:id="@+id/search_result_small_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_toLeftOf="@+id/search_result_small_arrow"
        android:layout_toRightOf="@+id/search_result_small_image"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_result_small_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_small_title"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/search_result_small_arrow"
        android:layout_toRightOf="@+id/search_result_small_image"
        android:textColor="@color/price_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/search_result_small_sell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_result_small_price"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/search_result_small_image"
        android:text="已售："
        android:textSize="14sp" />

    <TextView
        android:id="@+id/search_result_small_sell_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_result_small_sell"
        android:layout_below="@+id/search_result_small_price"
        android:layout_toRightOf="@+id/search_result_small_sell"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/search_result_small_emulate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_result_small_sell"
        android:layout_below="@+id/search_result_small_price"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/search_result_small_sell_num"
        android:text="评价："
        android:textSize="14sp" />

    <TextView
        android:id="@+id/search_result_small_em_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/search_result_small_sell"
        android:layout_below="@+id/search_result_small_price"
        android:layout_toRightOf="@+id/search_result_small_emulate"
        android:textSize="14sp" />

</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >
<RelativeLayout android:id="@+id/go_cart_relative2"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			 android:background="@drawable/topbg">"

    <Button
        android:id="@+id/go_cart_go_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
	
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/edit"
        android:text="去结算"
        android:textColor="#ffeeeeee"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/go_cart_order_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="doClick"
        android:text="购物车"
        android:textColor="#ffeeeeee"
        android:textSize="24dp" />

</RelativeLayout>
    
    <LinearLayout
        android:id="@+id/go_cart_sum"
        android:layout_below="@id/go_cart_relative2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
 
        android:background="@drawable/total_bg"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/go_cart_checkbox"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="总计:"
          
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/go_cart_sum_money_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="￥"
            android:textColor="#ed217c"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/go_cart_sum_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="0.0"
            android:textColor="#ed217c"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="数量："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/go_cart_sum_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:text="0"
            android:textColor="#ed217c"
            android:textSize="16sp" />
    </LinearLayout>

      <RelativeLayout 
         android:id="@+id/go_parent_layout"
         android:layout_alignParentBottom="true"
         android:layout_width="match_parent"
         android:layout_height="52dp"
        
         android:orientation="horizontal">
         <include layout="@layout/main_down"/>
     </RelativeLayout>
<ScrollView
       
    	 android:layout_below="@id/go_cart_sum"
    	 android:layout_above="@id/go_parent_layout"
        android:id="@+id/order_detail_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    

            <LinearLayout
                android:id="@+id/go_cart_relative1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                 android:layout_below="@id/go_cart_sum"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/go_cart_listview"
                    
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </ListView>
        
        </LinearLayout>
</ScrollView>

</RelativeLayout>


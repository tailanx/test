<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item android:left="-2dp" android:right="-2dp">
            	<shape android:shape="rectangle">
                	<solid android:color="@color/theme" />

                	<stroke android:width="1dp" android:color="@color/theme" />

               		<corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

                	<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            	</shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            
			<item android:left="-2dp" android:right="-2dp">
			    <shape android:shape="rectangle">
                	<solid android:color="#00000000" />

                	<stroke android:width="1dp" android:color="@color/theme" />

                	<corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />

                	<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            	</shape>
        	</item>
		</layer-list>
	</item>

</selector>
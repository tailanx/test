    <style name="StyleProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dialog_bg</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
</style>
    
    <style name="Loading" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>
    
    <style name="customer_progress_dialog" parent="@android:style/Widget.ProgressBar">
          <item name="android:indeterminateDuration">2000</item>
	  <item name="android:fullDark">@color/dialog_bg</item>
          <item name="android:topDark">@color/dialog_bg</item>
          <item name="android:centerDark">@color/dialog_bg</item>
          <item name="android:bottomDark">@color/dialog_bg</item>
          <item name="android:fullBright">@color/dialog_bg</item>
          <item name="android:topBright">@color/dialog_bg</item>
          <item name="android:centerBright">@color/dialog_bg</item>
          <item name="android:bottomBright">@color/dialog_bg</item>
          <item name="android:bottomMedium">@color/dialog_bg</item>
          <item name="android:centerMedium">@color/dialog_bg</item>
     </style>

